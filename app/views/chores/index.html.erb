<h1 class = "titlechores pt-5 pb-3"><%= "C'est parti chez #{current_user.team.name}!"%></h1>

<div class="buttonchore mb-4">
  <p class="choreme clicked">Mes tâches</p>
  <a class="choreall noclicked"href="../team/chores">Le ménage</a>
</div>

<div class="card-chores">
  <h2 class="top-chores"><%= "Mes tâches du mois" %></h2>
  <% @monthly_chores.each do |monthly_chore| %>
    <div class="chore">
      <p class="chorename row m-0"> <%= "#{monthly_chore.task.title} - #{monthly_chore.task.room}" %> </p>
      <p class="chorerespo row m-0"><%= monthly_chore.user.pseudo%></p>

      <% if monthly_chore.status == "pending" %>
      <div class="boxes row m-0">
          <%= link_to change_status_done_chore_path(monthly_chore), method: :patch do %>
            <p class="greenbox"><i class="fas fa-check-circle"></i></p>
          <% end %>
          <%= link_to change_status_uncomplete_chore_path(monthly_chore), method: :patch do %>
            <p class="redbox"><i class="fas fa-times-circle"></i></p>
          <% end %>
        <% else %>
          <%= link_to change_status_pending_chore_path(monthly_chore), method: :patch do %>
            <p><i class="fas fa-pencil-alt"></i></p>
          <% end %>
      <% end %>
      </div>
    </div>
  <%end%>
</div>



<% @weekly_chores_by_week_number.each do |weekly_chore|  %>
<div class="card-chores">
  <h2 class="top-chores"><%= "#{weekly_chore[0]} éme semaine" %></h2>
  <div class="chore">
    <p class="chorename row m-0"> <%= "#{weekly_chore[1].first.task.title} - #{weekly_chore[1].first.task.room}"%> </p>
    <p class="chorerespo row m-0"><%= weekly_chore[1].first.user.pseudo %></p>
  <% if weekly_chore[1].first.status == "pending" %>
    <div class="boxes row m-0">
      <%= link_to change_status_done_chore_path(weekly_chore[1]), method: :patch do %>
        <p class="greenbox"><i class="fas fa-check-circle"></i></p>
      <% end %>
      <%= link_to change_status_uncomplete_chore_path(weekly_chore[1]), method: :patch do %>
        <p class="redbox"><i class="fas fa-times-circle"></i></p>
      <% end %>
    </div>
      <% else %>
        <%= link_to change_status_pending_chore_path(weekly_chore[1]), method: :patch do %>
        <p><i class="fas fa-pencil-alt"></i></p>
      <% end %>
    <% end %>
  </div>
</div>
<% end %>
