  <div class = "row">
      <div class = "card col-6",  onclick="flip()">
        <%= f.collection_check_boxes :task_id, Task.all.where(room: "Cuisine"), :id, :title  %>
      </div>
      <div class = "card col-6",  onclick="flip()">
        <%= f.collection_check_boxes :task_id, Task.all.where(room: "Exterieur"), :id, :title  %>
