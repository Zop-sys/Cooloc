<div class="buttonchore">
  <p class="choreme">Mes tâches</p>
  <p class="choreall">Les tâches de tous</p>
</div>
<h1> <%= @weekly_chores_by_week_number %></h1>
<h2 class="top-chores"><%= Date.today.strftime('%B') %></h2>
<% @monthly_chores_users.each do |monthly_chore_user| %>
<% monthly_chore_user.each do |monthly_chore| %>
<div class="chore">
  <p class="chorename"> <%= monthly_chore.task.title %> </p>
  <p class="chorerespo"><%= monthly_chore.user.pseudo%></p>
  <% if monthly_chore.status == "pending" %>
  <div class="boxes">
    <%= link_to change_status_done_team_chore_path(monthly_chore), method: :patch do %>
    <p class="greenbox"><i class="fas fa-check-circle"></i></p>
    <% end %>
    <%= link_to change_status_uncomplete_team_chore_path(monthly_chore), method: :patch do %>
    <p class="redbox"><i class="fas fa-times-circle"></i></p>
    <% end %>
  </div>
    <% else %>
    <%= monthly_chore.status %>
    <%= link_to "changer le statut", change_status_pending_team_chore_path(monthly_chore), method: :patch %>
    <% end %>
</div>
<%end%>
<%end%>





<% @weekly_chores_by_week_number_users.each do |weekly_chores_per_user| %>
<% weekly_chores_per_user.each do |weekly_chore|  %>
<h2 class="top-chores"><%= "Semaine du #{weekly_chore.week_number}" %></h2>
<div class="chore">
  <p class="chorename"> <%= weekly_chore.task.title %> </p>
  <p class="chorerespo"><%= weekly_chore.user.pseudo %></p>


</div>
<% end %>
<% end %>



